.head_dashboard
  .row
    .col-sm-6
      %h3 Your Conversations
    .col-sm-6.text-right
      = link_to 'Start Conversation', new_message_path, class: 'btn btn-lg btn-primary'
  .clearfix
.dashboard_cont
  .col-sm-3
    %ul.nav.nav-pills.nav-stacked
      = mailbox_section 'inbox', @box
      = mailbox_section 'sent', @box
      = mailbox_section 'trash', @box
  .col-sm-9
    - if @box == 'trash'
      %p= link_to 'Empty trash', empty_trash_conversations_path, class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?'}
    %ul.list-group= render partial: 'conversations/conversation', collection: @conversations
    = will_paginate